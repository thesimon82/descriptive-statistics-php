{
    "name": "renor/descriptive-statistics-php",
    "description": "A lightweight PHP class for descriptive statistics (mean, median, mode, variance, etc.)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simone Renzi",
            "email": "simone@renor.it"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Renor\\Statistics\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "autoload-dev": {
        "psr-4": {
            "Renor\\Statistics\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}